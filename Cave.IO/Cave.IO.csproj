<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net20;net35;net40;net45</TargetFrameworks>
    <!--project-->
    <RootNamespace>Cave.IO</RootNamespace>
    <AssemblyOriginatorKeyFile>cave-io.snk</AssemblyOriginatorKeyFile>
    <Product>CaveSystems IO Library</Product>
    <PackageTags>CaveSystems IO</PackageTags>
    <Description>CaveSystems IO Library. This package contains fast non buffering data readers and writers, endian conversion, stream buffers (fifo, ring) and fast struct marshalling.</Description>
    <PackageProjectUrl>https://github.com/CaveSystems/cave-io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CaveSystems/cave-io</RepositoryUrl>

    <!--settings-->
    <PackageReleaseNotes />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SignAssembly>true</SignAssembly>
    <NeutralLanguage />
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net40' OR '$(TargetFramework)'=='net45' OR '$(TargetFramework)'=='net46' OR '$(TargetFramework)'=='net47'">
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net20' OR '$(TargetFramework)'=='net35'">
    <Reference Include="System" />
    <Reference Include="System.Data" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cave.Extensions" Version="2.1.2" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
